<% section = 'items' %>
<%- include ('header.ejs') %>
    <!-- page content -->
    <section id="content" class="sidebar">
        <header class="headerPage">
            <div class="container clearfix">
                <div class="row">
                    <h1 class="span8">Items</h1>
                    <div class="span4" id="navTrail"> <a href="/" class="homeLink">home</a><span>/</span>Items</div>
                </div>
            </div>
        </header>
        <div class="slice clearfix">
            <div class="container">
                <%- include ('alerts.ejs') %>
                <div class="row">
                    <aside class="span3" id="sidebar">
                        <nav id="subnav">
                            <ul>
                                <li><a href="/items" class="active">By name</a></li>
                                <li><a href="/items?sort=last_update">By last update</a></li>
                                <li><a href="/items?sort=status">By status</a></li>
                            </ul>
                            <div class="littleShadow"></div>
                        </nav>
<!--                        <section id="widgetArea">
                            <div class="widget">
                                <h3> widget 1</h3>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut auctor lorem. Curabitur at lobortis nulla. Sed tincidunt, orci sit amet varius ornare,</p>
                            </div>
                        </section> -->
                    </aside>
                    <div class="span9">
                        <table class="table table-hover table-striped">
                            <thead>
                            <tr><th>Name</th><th>Status</th><th>Last update</th></tr>
                            </thead>
                            <% for (var i=0; i<items.length; i++) { %>
                            <tr><td><a href="/events?source=<%=items[i].name%>"><%= items[i].name %></a></td><td><%= items[i].status %></td><td><%= date_util(items[i].last_update, timeZone).toRelativeCalendar() %></td></tr>
                            <% } %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- page content -->
<%- include ('footer.ejs') %>
