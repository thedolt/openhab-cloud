<% section = 'config' %>
<%- include ('header.ejs') %>
<!-- page content -->
<section id="content" class="sidebar">
    <header class="headerPage">
        <div class="container clearfix">
            <div class="row">
                <h1 class="span8">System</h1>
                <div class="span4" id="navTrail"> <a href="index.html" class="homeLink">home</a><span>/</span><a href="/config">Configuration</a><span>/</span>System</div>
            </div>
        </div>
    </header>
    <div class="slice clearfix">
        <div class="container">
            <%- include ('alerts.ejs') %>
            <div class="row">
                <aside class="span3" id="sidebar">
                    <nav id="subnav">
                        <ul>
                            <% for (var pid in openhabConfig) { %>
                            <li><a <% if (pid == selectedPid) { %>class="active"<% } %> href="/config/system/<%=pid%>"><%= pid %></a></li>
                            <% } %>
                        </ul>
                        <div class="littleShadow"></div>
                    </nav>
                </aside>
                <div class="span9">
                    <table class="table table-hover">
                        <thead>
                        <tr><th>Property</th><th>Value</th></tr>
                        </thead>
                        <% for (var config in openhabConfig[selectedPid]) { %>
                        <tr><td><%= config %></td><td><%= openhabConfig[selectedPid][config]%></td></tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page content -->
<%- include ('footer.ejs') %>
